@model IEnumerable<Tune_Up.Models.Vehicle>
<p>
    <a class="btn btn-outline-primary" href="/Vehicle/AddVehicle">Add</a>
</p>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th scope="col">
                @Html.DisplayNameFor(model => model.EngineVolume)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Fuel)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.EngineVolume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fuel)
                </td>
                <td>
                    <a href="/Vehicle/EditVehicle/@item.Id" class="btn btn-outline-success"><img src="~/Content/Icons/pencil.svg" alt="Edit"/></a>
                    <a href="/Vehicle/DeleteVehicle/@item.Id" class="btn btn-outline-danger"><img src="~/Content/Icons/trashcan.svg" alt="Delete"/></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-outline-info" href="/Home/Index">Back</a>
</div>
