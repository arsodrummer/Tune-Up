@model Tune_Up.Models.Vehicle

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit vehicle item</title>
</head>
<body>
    @using (Html.BeginForm("SaveVehicle", "Vehicle", null, FormMethod.Post, new {enctype = "multipart/form-data"}))
    {
        @Html.AntiForgeryToken()
        <div class="card">
            <div class="form-horizontal">
                <div class="card-header text-center">
                    Vehicle
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <!--Name-->
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <!--Manufacturing date-->
                <div class="form-group">
                    @Html.LabelFor(model => model.ManufacturingDate, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ManufacturingDate, new { htmlAttributes = new { @class = "form-control form_manufacturing_date", @Value = Model.ManufacturingDate.ToString("dd/MM/yyyy"), @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.ManufacturingDate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <!--Engine volume-->
                <div class="form-group">
                    @Html.LabelFor(model => model.EngineVolume, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.EngineVolume, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EngineVolume, "", new { @class = "text-danger" })
                    </div>
                </div>
                <!--Fuel-->
                <div class="form-group">
                    @Html.LabelFor(model => model.Fuel, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EnumDropDownListFor(model => model.Fuel, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Fuel, "", new { @class = "text-danger" })
                    </div>
                </div>
                <!--Photo-->
                <div class="form-group">
                    @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input name="photo" type="file" id="Photo" />
                        @*@Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })*@
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-outline-primary" formaction="@Url.Action("SaveVehicle")" />
                        <a class="btn btn-outline-secondary" href="/Home/Vehicles">Back to vehicles list</a>
                    </div>
                </div>
            </div>
        </div>
    }

</body>
</html>
<script type="text/javascript">
    $('.form_manufacturing_date').datepicker({
        autoclose: true,
        todayHighlight: true,
        format: "dd-mm-yyyy"
    });
</script>